@model Shop.Model.Navigation
@{
    ViewBag.Title = "Navigation_Create";
}
<h2 class="contentTitle">[Navigation]</h2>
<div class="pageContent">
@using (Html.BeginForm("Create","Navigation", FormMethod.Post,new Dictionary<string,object>(){ { "class",""},{"onsubmit","return validateCallback(this,navTabAjaxDone);"}})) {
    <div class="pageFormContent nowrap" layoutH="97">	
		<dl>
		<dt>导航名称</dt>
		<dd>
				  @Html.TextBoxFor(m => m.Navigation_Name)
		          @Html.ValidationMessageFor(m => m.Navigation_Name)
		</dd>
	</dl>
		<dl>
		<dt>排序</dt>
		<dd>
				  @Html.TextBoxFor(m => m.Navigation_Sort)
		          @Html.ValidationMessageFor(m => m.Navigation_Sort)
		</dd>
	</dl>
		<dl>
		<dt>0,药材专场，1日用百货专场</dt>
		<dd>
				  @Html.TextBoxFor(m => m.Navigation_Type)
		          @Html.ValidationMessageFor(m => m.Navigation_Type)
		</dd>
	</dl>
		<dl>
		<dt>Navigation_CreateTime</dt>
		<dd>
		
		 @Html.TextBoxFor(m => m.Navigation_CreateTime, new { @class = "date", @readonly = "true" })<a class="inputDateButton" href="javascript:;">选择</a>
		          @Html.ValidationMessageFor(m => m.Navigation_CreateTime)
		</dd>
	</dl>
		<dl>
		<dt>Navigation_User</dt>
		<dd>
				  @Html.TextBoxFor(m => m.Navigation_User)
		          @Html.ValidationMessageFor(m => m.Navigation_User)
		</dd>
	</dl>
		<dl>
		<dt>Navigation_IsDel</dt>
		<dd>
				  @Html.TextBoxFor(m => m.Navigation_IsDel)
		          @Html.ValidationMessageFor(m => m.Navigation_IsDel)
		</dd>
	</dl>
	    </div>
		<div class="formBar">
			<ul>
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
				<li><div class="button"><div class="buttonContent"><button type="button" class="close">关闭</button></div></div></li>
			</ul>
		</div>
}
</div>