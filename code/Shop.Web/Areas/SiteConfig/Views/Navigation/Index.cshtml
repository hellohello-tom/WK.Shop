@model MySoft.Data.IDataPage<IList<Shop.Model.Navigation>>
@{
    ViewBag.Title = "Navigation_Index";
}

<form id="pagerForm" method="post" action="/[area]/Navigation/Index">
	<input type="hidden" name="pageNum" value="1" />
	<input type="hidden" name="pageNum" value="@Model.CurrentPageIndex" />
	<input type="hidden" name="numPerPage" value="@Model.PageSize" />
	<input type="hidden" name="orderDirection" value="${param.orderDirection}" />
</form>

<div class="pageHeader">
	<form rel="pagerForm" onsubmit="return navTabSearch(this);" action="/[area]/Navigation/Index" method="post">
	<div class="searchBar">
		<ul class="searchContent">
			@*<li>
				<label>姓名：</label>
				<input type="text" name="keywords" value="@ViewBag.Keywords"/>
			</li>*@
			  <li style="padding-left:10px; padding-top:0px; height:25px;">  
                 <div class="buttonActive">
                            <div class="buttonContent">
                                <button type="submit">
                                    检索</button></div>
                 </div>
            </li>
		</ul>
		
		@*<div class="subBar">
			<ul>
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">检索</button></div></div></li>
				<li><a class="button" href="demo_page6.html" target="dialog" mask="true" title="查询框"><span>高级检索</span></a></li>
			</ul>
		</div>*@
	</div>
	</form>
</div>
<div class="pageContent">
	<div class="panelBar">
		<ul class="toolBar">
			<li><a class="add" href="/[area]/Navigation/Create" target="navTab" rel="[area]_Navigation_Create"><span>添加</span></a></li>

			<li><a title="确实要删除这些记录吗?" target="selectedTodo" rel="ids" href="/[area]/Navigation/DeleteList" class="delete"><span>批量删除</span></a></li>
		</ul>
	</div>
	<table class="table" width="100%" layoutH="112">
		<thead>
			<tr>
				<th width="30"><input type="checkbox" group="ids" class="checkboxCtrl"></th>
				<th width="100">导航名称</th>
				<th width="100">排序</th>
				<th width="100">0,药材专场，1日用百货专场</th>
				<th width="100">Navigation_CreateTime</th>
				<th width="100">Navigation_User</th>
				<th width="100">Navigation_IsDel</th>
				<th width="70">操作</th>
			</tr>
		</thead>
		<tbody>
        @foreach (var m in Model.DataSource)
		{
			 	<tr target="Navigation_ids" rel="@m.Id">
					<td><input name="ids" value="@m.Id" type="checkbox"></td>
					<td>@m.Navigation_Name</td>
					<td>@m.Navigation_Sort</td>
					<td>@m.Navigation_Type</td>
					<td>@m.Navigation_CreateTime</td>
					<td>@m.Navigation_User</td>
					<td>@m.Navigation_IsDel</td>
					
					<td>
						<a title="编辑[Navigation]信息" rel="[area]_Navigation_Edit" target="navTab" href="/[area]/Navigation/Create/@m.Id" class="btnEdit">编辑</a>
						<a title="确认删除?" target="ajaxTodo" href="/[area]/Navigation/Delete/@m.Id" class="btnDel">删除</a>
					</td>
				</tr>
	    }
		</tbody>
	</table>
	<div class="panelBar">
		<div class="pages">
			<span>显示</span>
			<select class="combox" name="numPerPage" onchange="navTabPageBreak({numPerPage:this.value})">
				@foreach (string pageSize in "10,20,50,100".Split(','))
                {
                    <option value="@pageSize" @{Write(Model.PageSize.ToString() == pageSize ? "selected" : "");}>@pageSize</option>
                }
			</select>
			<span>条，共 @Model.RowCount 条</span>
		</div>
		
		<div class="pagination" targetType="navTab" totalCount="@Model.RowCount" numPerPage="@Model.PageSize" pageNumShown="10" currentPage="@Model.CurrentPageIndex"></div>

	</div>
</div>