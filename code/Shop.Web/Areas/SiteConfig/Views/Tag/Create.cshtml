@model Shop.Model.Tag
@{
    ViewBag.Title = "Tag_Create";
}
<h2 class="contentTitle">标签信息</h2>
<div class="pageContent">
    @using (Html.BeginForm("Create", "Tag", FormMethod.Post, new Dictionary<string, object>() { { "class", "" }, { "onsubmit", "return validateCallback(this,navTabAjaxDone);" } }))
    {
        <div class="pageFormContent" layouth="140">
            <dl>
                <dt>手机导航</dt>
                <dd>
                    @Html.HiddenFor(m => m.Tag_NavigationId, new { dataField = "selectModule.Id" })
                    <input type="text" readonly="readonly" class="required" datafield="selectModule.Name" value="@ViewBag.NavigationName " />
                    <a class="btnLook" href="/SiteConfig/Tag/SelectNavigation/?navigationId={ModuleIds}"
                       lookupgroup="selectModule">选择模块</a>
                    @Html.ValidationMessageFor(m => m.Tag_NavigationId)
                </dd>
            </dl>
            <dl>
                <dt>标签名称</dt>
                <dd>
                    @Html.TextBoxFor(m => m.Tag_Name)
                    @Html.ValidationMessageFor(m => m.Tag_Name)
                </dd>
            </dl>
            <dl>
                <dt>标签图片</dt>
                <dd>
                    @Html.TextBoxFor(m => m.Tag_ImagePath)
                    @Html.ValidationMessageFor(m => m.Tag_ImagePath)
                </dd>
            </dl>
            <dl>
                <dt>排序</dt>
                <dd>
                    @Html.TextBoxFor(m => m.Tag_Sort)
                    @Html.ValidationMessageFor(m => m.Tag_Sort)
                </dd>
            </dl>
        </div>
        <div class="formBar">
            <ul>
                <li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
                <li><div class="button"><div class="buttonContent"><button type="button" class="close">关闭</button></div></div></li>
            </ul>
        </div>
    }
</div>