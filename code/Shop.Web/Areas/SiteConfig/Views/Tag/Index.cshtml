@model MySoft.Data.IDataPage<IList<Shop.Model.Tag>>
@{
    ViewBag.Title = "Tag_Index";
}

<form id="pagerForm" method="post" action="/SiteConfig/Tag/Index">
    <input type="hidden" name="pageNum" value="@Model.CurrentPageIndex" />
    <input type="hidden" name="numPerPage" value="@Model.PageSize" />
    <input type="hidden" name="orderDirection" value="${param.orderDirection}" />
    <input type="hidden" name="navigationId" value="@ViewBag.NavigationId"/>
</form>
<div class="pageHeader">
    <form rel="pagerForm" onsubmit="return navTabSearch(this);" action="/SiteConfig/Tag/Index" method="post">
        <div class="searchBar">
            <ul class="searchContent">
                <li>
                    <label>标签名称：</label>
                    <input type="text" name="tagName" value="@ViewBag.Name" />
                </li>
                <li style="padding-left:10px; padding-top:0px; height:25px;">
                    <div class="buttonActive">
                        <div class="buttonContent">
                            <button type="submit">
                                检索
                            </button>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </form>
</div>
<div class="pageContent">
    <div class="panelBar">
        <ul class="toolBar">
            <li><a class="add" href="/SiteConfig/Tag/Create" target="navTab" rel="SiteConfig_Tag_Edit"><span>添加</span></a></li>

            <li><a title="确实要删除这些记录吗?" target="selectedTodo" rel="ids" href="/SiteConfig/Tag/DeleteList" class="delete"><span>批量删除</span></a></li>
        </ul>
    </div>
    <table class="table" width="100%" layouth="112">
        <thead>
            <tr>
                <th width="30"><input type="checkbox" group="ids" class="checkboxCtrl"></th>
                <th width="100">标签名称</th>
                <th width="100">标签图片</th>
                <th width="100">排序</th>
                <th width="100">创建时间</th>
                <th width="70">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.DataSource)
            {
                <tr target="Tag_ids" rel="@m.Id">
                    <td><input name="ids" value="@m.Id" type="checkbox"></td>
                    <td>@m.Tag_Name</td>
                    <td><image src="@m.Tag_ImagePath" style="width:80px;height:80px" /></td>
                    <td>@m.Tag_Sort</td>
                    <td>@m.Tag_CreateTime</td>
                    <td>
                        <a title="商品管理" rel="SiteConfig_Commodity" target="navTab" href="/SiteConfig/Commodity/Index?tagId=@m.Id" class="btnView">查看旗下商品</a>
                        <a title="编辑标签信息" rel="SiteConfig_Tag_Edit" target="navTab" href="/SiteConfig/Tag/Create/@m.Id" class="btnEdit">编辑</a>
                        <a title="确认删除?" target="ajaxTodo" href="/SiteConfig/Tag/Delete/@m.Id" class="btnDel">删除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="panelBar">
        <div class="pages">
            <span>显示</span>
            <select class="combox" name="numPerPage" onchange="navTabPageBreak({numPerPage:this.value})">
                @foreach (string pageSize in "10,20,50,100".Split(','))
                {
                    <option value="@pageSize" @{Write(Model.PageSize.ToString() == pageSize ? "selected" : "");}>@pageSize</option>
                }
            </select>
            <span>条，共 @Model.RowCount 条</span>
        </div>

        <div class="pagination" targettype="navTab" totalcount="@Model.RowCount" numperpage="@Model.PageSize" pagenumshown="10" currentpage="@Model.CurrentPageIndex"></div>
    </div>
</div>