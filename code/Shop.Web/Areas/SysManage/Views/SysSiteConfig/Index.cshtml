@model Shop.Model.SysSiteConfig
@{
    ViewBag.Title = "SysSiteConfig_Create";
}
<script type="text/javascript">
    //水印照片上传成功回调
    function SysManage_SysSiteConfig_UploadComplete(event, response, status) {
        if (status) {
            var json = eval("(" + response + ")");
            $("#WatermarkPicPath").val(json.data.newFileName);
        }
    }
</script>
<div class="pageContent">
    @using (Html.BeginForm("Save", "SysSiteConfig", FormMethod.Post, new Dictionary<string, object>() { { "class", "" }, { "onsubmit", "return validateCallback(this,navTabAjaxDone);" } }))
    {
        <div class="pageFormContent ">
            <div class="tabs" currentindex="0" eventtype="click">
                <div class="tabsHeader">
                    <div class="tabsHeaderContent">
                        <ul>
                            <li><a href="javascript:;"><span>基本信息</span></a></li>
                            <li><a href="javascript:;"><span>附件信息</span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="tabsContent" layouth="90">
                    <div>
                        <dl>
                            <dt>网站名称</dt>
                            <dd>
                                @Html.EditorFor(model => model.WebName)
                                @Html.ValidationMessageFor(model => model.WebName)
                            </dd>
                        </dl>
                        <dl>
                            <dt>联系电话</dt>
                            <dd>
                                @Html.EditorFor(model => model.WebTel)
                                @Html.ValidationMessageFor(model => model.WebTel)
                            </dd>
                        </dl>
                        <dl>
                            <dt>联系地址</dt>
                            <dd>
                                @Html.TextAreaFor(model => model.WebAddr)
                                @Html.ValidationMessageFor(model => model.WebAddr)
                            </dd>
                        </dl>
                        <dl>
                            <dt>网站分享</dt>
                            <dd>
                                @Html.TextAreaFor(model => model.WebShare)&nbsp;(可以是HTML代码)
