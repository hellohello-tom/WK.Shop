                                @Html.TextAreaFor(model => model.WebCountCode, new { rows = "5" }) &nbsp;(可以是HTML代码)
                                @Html.ValidationMessageFor(model => model.WebCountCode)
                            </dd>
                        </dl>
                    </div>
                    <div>
                        <dl>
                            <dt>附件目录</dt>
                            <dd>
                                @Html.TextBoxFor(m => m.AttachPath, new Dictionary<string, object> { { "readonly", "true" } })
                                @Html.ValidationMessageFor(model => model.AttachPath)
                            </dd>
                        </dl>
                        <dl>
                            <dt>文件类型</dt>
                            <dd>
                                @Html.EditorFor(model => model.AttachExtension)
                                @Html.ValidationMessageFor(model => model.AttachExtension)
                            </dd>
                        </dl>
                        <dl>
                            <dt>文件大小</dt>
                            <dd>
                                @Html.EditorFor(model => model.AttachSize)&nbsp;KB
                                @Html.ValidationMessageFor(model => model.AttachSize)
                            </dd>
                        </dl>
                        <dl>
                            <dt>图片类型</dt>
                            <dd>
                                @Html.EditorFor(model => model.AttachImgExtension)
                                @Html.ValidationMessageFor(model => model.AttachImgExtension)
                            </dd>
                        </dl>
                        <dl>
