                            <dt>水印图片路径</dt>
                            <dd>
                                @Html.EditorFor(m => m.WatermarkPicPath, new { @name = "WatermarkPicPath", @id = "WatermarkPicPath" })
                                <input id="SysManage_SysSiteConfig_Create_File" type="file" name="filedata" uploaderoption="{
			                                        uploader:'@Shop.Web.BaseData.SiteConfig.ImgFileServer/Upload/SingleFile?isImage=1',
