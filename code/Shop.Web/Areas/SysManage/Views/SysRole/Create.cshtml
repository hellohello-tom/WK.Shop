@model Shop.Model.SysRole
@{
    ViewBag.Title = "SysRole_Create";
}
<div class="page-header">
    <h4>
        角色</h4>
</div>
<div class="pageContent">
    @using (Html.BeginForm("Create", "SysRole", FormMethod.Post, new Dictionary<string, object>() { { "class", "" }, { "onsubmit", "return validateCallback(this,navTabAjaxDone);" } }))
    {
        <div class="pageFormContent " layouth="140">
            <dl>
                <dt>角色编码</dt>
                <dd>
                    @Html.EditorFor(m => m.Code)
                    @Html.ValidationMessageFor(m => m.Code)
                </dd>
            </dl>
            <dl>
                <dt>角色名称</dt>
                <dd>
                    @Html.EditorFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </dd>
            </dl>
            <dl>
                <dt>权限</dt>
                <dd>
                    @Html.TextBoxFor(m => m.ModuleIds, new { dataField = "selectModule.Id" })
                    <input type="text" readonly = "readonly" class="required" dataField="selectModule.Name" value="@ViewBag.ModuleNames"  />
                    <a class="btnLook" href="/SysManage/SysRole/SelectModule/?moduleIds={ModuleIds}"
                        lookupgroup="selectModule">选择模块</a>
                    @Html.ValidationMessageFor(m => m.ModuleIds)
                </dd>
            </dl>
            <dl>
                <dt>状态</dt>
                <dd>
                    @Html.RadioButtonFor(m => m.Enabled, 1)启用
                    @Html.RadioButtonFor(m => m.Enabled, 0)停用
                    @Html.ValidationMessageFor(m => m.Enabled)
                </dd>
            </dl>
            <dl>
                <dt>备注</dt>
                <dd>
                    @Html.TextAreaFor(m => m.Remark)
                    @Html.ValidationMessageFor(m => m.Remark)
                </dd>
            </dl>
        </div>
        <div class="formBar">
            <ul>
                <li>
                    <div class="buttonActive">
                        <div class="buttonContent">
                            <button type="submit">
                                保存</button></div>
                    </div>
                </li>
                <li>
                    <div class="button">
                        <div class="buttonContent">
                            <button type="button" class="close">
                                关闭</button></div>
                    </div>
                </li>
            </ul>
        </div>
    }
</div>
