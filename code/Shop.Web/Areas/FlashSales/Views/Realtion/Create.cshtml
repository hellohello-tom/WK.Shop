@model Shop.Model.Realtion
@{
    ViewBag.Title = "Realtion_Create";
}
<h2 class="contentTitle">[Realtion]</h2>
<div class="pageContent">
    @using (Html.BeginForm("Create", "Realtion", FormMethod.Post, new Dictionary<string, object>() { { "class", "" }, { "onsubmit", "return validateCallback(this,navTabAjaxDone);" } }))
    {
        <div class="pageFormContent nowrap" layouth="97">
            <dl>
                <dt>商品ID</dt>
                <dd>
                    @Html.TextBoxFor(m => m.Realtion_CommodityId)
                    @Html.ValidationMessageFor(m => m.Realtion_CommodityId)
                </dd>
            </dl>
            <dl>
                <dt>闪购ID</dt>
                <dd>
                    @Html.TextBoxFor(m => m.Realtion_SaleId)
                    @Html.ValidationMessageFor(m => m.Realtion_SaleId)
                </dd>
            </dl>
            <dl>
                <dt>是否置顶</dt>
                <dd>
                    @Html.TextBoxFor(m => m.Realtion_IsTop)
                    @Html.ValidationMessageFor(m => m.Realtion_IsTop)
                </dd>
            </dl>
            <dl>
                <dt>创建时间</dt>
                <dd>

                    @Html.TextBoxFor(m => m.Realtion_CreateTime, new { @class = "date", @readonly = "true" })<a class="inputDateButton" href="javascript:;">选择</a>
                    @Html.ValidationMessageFor(m => m.Realtion_CreateTime)
                </dd>
            </dl>
            <dl>
                <dt>创建人</dt>
                <dd>
                    @Html.TextBoxFor(m => m.Realtion_CreateUser)
                    @Html.ValidationMessageFor(m => m.Realtion_CreateUser)
                </dd>
            </dl>
            <dl>
                <dt>是否删除</dt>
                <dd>
                    @Html.TextBoxFor(m => m.Realtion_IsDel)
                    @Html.ValidationMessageFor(m => m.Realtion_IsDel)
                </dd>
            </dl>
        </div>
        <div class="formBar">
            <ul>
                <li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
                <li><div class="button"><div class="buttonContent"><button type="button" class="close">关闭</button></div></div></li>
            </ul>
        </div>
    }
</div>