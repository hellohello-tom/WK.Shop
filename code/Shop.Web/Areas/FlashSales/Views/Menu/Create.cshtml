@model Shop.Model.Menu
@{
    ViewBag.Title = "Menu_Create";
}
<h2 class="contentTitle">[Menu]</h2>
<div class="pageContent">
    @using (Html.BeginForm("Create", "Menu", FormMethod.Post, new Dictionary<string, object>() { { "class", "" }, { "onsubmit", "return validateCallback(this,navTabAjaxDone);" } }))
    {
        <div class="pageFormContent nowrap" layouth="97">
            <dl>
                <dt>父ID</dt>
                <dd>
                    @Html.TextBoxFor(m => m.Menu_ParentId)
                    @Html.ValidationMessageFor(m => m.Menu_ParentId)
                </dd>
            </dl>
            <dl>
                <dt>菜单名称</dt>
                <dd>
                    @Html.TextBoxFor(m => m.Menu_Name)
                    @Html.ValidationMessageFor(m => m.Menu_Name)
                </dd>
            </dl>
            <dl>
                <dt>排序</dt>
                <dd>
                    @Html.TextBoxFor(m => m.Menu_Sort)
                    @Html.ValidationMessageFor(m => m.Menu_Sort)
                </dd>
            </dl>
            <dl>
                <dt>菜单类型</dt>
                <dd>
                    @Html.TextBoxFor(m => m.Menu_Type)
                    @Html.ValidationMessageFor(m => m.Menu_Type)
                </dd>
            </dl>
            <dl>
                <dt>创建人</dt>
                <dd>
                    @Html.TextBoxFor(m => m.Menu_User)
                    @Html.ValidationMessageFor(m => m.Menu_User)
                </dd>
            </dl>
            <dl>
                <dt>创建时间</dt>
                <dd>

                    @Html.TextBoxFor(m => m.Menu_CreateTime, new { @class = "date", @readonly = "true" })<a class="inputDateButton" href="javascript:;">选择</a>
                    @Html.ValidationMessageFor(m => m.Menu_CreateTime)
                </dd>
            </dl>
            <dl>
                <dt>是否删除</dt>
                <dd>
                    @Html.TextBoxFor(m => m.Menu_IsDel)
                    @Html.ValidationMessageFor(m => m.Menu_IsDel)
                </dd>
            </dl>
        </div>
        <div class="formBar">
            <ul>
                <li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
                <li><div class="button"><div class="buttonContent"><button type="button" class="close">关闭</button></div></div></li>
            </ul>
        </div>
    }
</div>