@{
    ViewBag.Title = Shop.Web.ViewModel.ApplicationConfigs.GetConfigInfo.ConfigName;
    Layout = "~/Areas/Phone/Views/Shared/_Layout.cshtml";
}
@section Head
{
    <link href='@Url.Content("~/Scripts/plugin/swiper/css/swiper.min.css")' rel="stylesheet" />
    <script src='@Url.Content("~/Scripts/plugin/swiper/js/swiper3.0.8.min.js")'></script>
    <script src="~/Scripts/Mobile/cuntdown.js"></script>
}


<header class="home">
    <div class="logo tc"><img src="~/Resource/images/logo.png" height="217" width="189" alt=""></div>
    <div class="s-link tc">
        <a href="/yaodian/search">输入药品名称/疾病名称搜索</a>
    </div>
    <div class="cat dis-flex tc">
        <a href="@Url.RouteUrl("Phone_commodity")" class=zhao>科室找药</a>
        <a href="@Url.RouteUrl("Phone_FlashSales_Index")" class=yao>π用药</a>
        <a href="@Url.RouteUrl("Phone_commodity",new {nk="man"})" class=man>男科</a>
        <a href="@Url.RouteUrl("Phone_commodity",new {nk="woman"})" class=woman>妇科</a>
    </div>
</header>
<div class="main">
    @Html.Action("FlashSalesItem")
</div>
@section Js
{
    <script type="text/javascript">
        $(document).ready(function () {
            var mySwiper = new Swiper('.swiper-container-flashsales', {
                preloadImages: false,
                speed: 2500,
                autoplayDisableOnInteraction: false,
                loop: true,
                autoplay: 2000
            });

            $(function () {
                $('#time-p').countdown();
            });
        });
    </script>
}
