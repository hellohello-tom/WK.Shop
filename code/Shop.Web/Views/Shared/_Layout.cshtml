<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,initial-scale=1.0,user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <title>管理员登录</title>
    <link href="~/Content/login/login.css" rel="stylesheet" />
    @*页面自定义CSS*@
    @RenderSection("Css", required: false)
    @*页面自定义JS*@
    @RenderSection("Js", required: false)
</head>

<body class="loginbody">
    <div style="width:100%; height:100%; min-width:300px; min-height:260px;"></div>
    <div class="login-wrap">
        <div class="login-logo">LOGO</div>
        <div class="login-form">
            @using (Html.BeginForm("Login", "Register", null, FormMethod.Post, new { @id = "loginForm" }))
            {
                <div class="login-form">
                    <div class="col">
                        <input id="UserName_Layout" class="login-input" type="text" value="" name="UserName" data-val-required="用户名不能为空！"
                               data-val="true" placeholder="请输入用户名" />
                    </div>
                    <div class="col">
                        <input id="PassWord_Layout" class="login-input" type="password" value="" name="PassWord"
                               data-val-required="密码不能为空！" data-val="true" placeholder="请输入密码" />
                    </div>
                    <div class="col">
                        <input name="btnSubmit" value="登 录" id="btnSubmit" class="login-btn" type="submit">
                    </div>
                </div>
                <div class="login-tips"><i></i><p id="msgtip">@(TempData["msg"] == null ? "请输入用户名和密码" : TempData["msg"])</p></div>
            }
        </div>
    </div>
    <div class="copy-right">
        <p>版权所有 tomCat Copyright © 2010 - 2015 </p>
    </div>
</body>

</html>